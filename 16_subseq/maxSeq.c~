#include <stdio.h>
#include <stdlib.h>

size_t maxSeq(int * array, size_t n) {
  if (n <= 0 || array == NULL) {
    return NULL;
  }
  if (n == 1) {
    return 1;
  }
  size_t max_seq = 1;
  size_t temp_seq = 1;
  int * p = &array[1];
  for (size_t i = 0; i < n-1;i++) {
    if (*p > array[i]) {
      temp_seq++;
      p++;
    } else {
      /* reset */
      temp_seq = 1;
      p++;
    }    
    if (temp_seq > max_seq) {
      max_seq = temp_seq;
    }
  }
  return max_seq;
}
      
